{% extends "base_admin.html.twig" %}

{% block title %}Create a language{% endblock %}

{% block main %}

<h1 class="mb-4">Create a language</h1>
<div class="d-flex justify-content-center">
  <div class="card p-4 shadow-sm" style="width: 40rem;">

    {{ form_start(form) }}
    {{ form_row(form.label) }}
    {{ form_row(form.slug) }}
    {{ form_row(form.flagPath) }}
    <div class="d-flex justify-content-center mt-4">
      <button type="submit" class="btn-lingo btn-lingo--green">Create</button>
    </div>
    {{ form_end(form) }}
  </div>
</div>
{% endblock %}