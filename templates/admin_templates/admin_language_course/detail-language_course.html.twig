{% extends 'base_admin.html.twig' %}

{% block title %}{{ languageCourse.label }}{% endblock %}

{% block main %}


<h1>{{ languageCourse.label }}</h1>

<div class="text-start">
  <div class="d-flex justify-content-start mb-3">
    <a class="btn btn-outline-info me-3" href="{{ path('admin_languages') }}">Back to list</a>
    <a class="btn btn-outline-primary"
      href="{{ path('app_admin_language_course_edit', { 'id': languageCourse.id }) }}">Edit</a>
  </div>
  <p>Description: {{ languageCourse.description }}</p>
  <p>Created at: {{ languageCourse.createdAt ? languageCourse.createdAt|date('Y-m-d H:i:s') }}</p>
  <p>Updated at: {{ languageCourse.updatedAt ? languageCourse.updatedAt|date('Y-m-d H:i:s') }}</p>

  <div>
    <p>Missions:</p>
    <div class="d-flex justify-content-evenly mb-4">
      <a class="btn btn-outline-info me-3" href="{{ path('app_admin') }}">Retour Ã  l'admin</a>
      <a class="btn btn-outline-info" href="{{path('create_admin_mission', { 'id': languageCourse.id })}}">Create a
        mission</a>
    </div>
    <table class="table table-hover mt-3">

      <thead>
        <tr class="text-center">
          <th scope="col">Mission label</th>
          <th scope="col">Mission description</th>
          <th scope="col">Mission XP Reward</th>
          <th scope="col">Mission illustration</th>
          <th scope="col">Created at</th>
          <th scope="col">Updated at</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for mission in languageCourse.missions %}
        <tr>

          <td scope="row">{{ mission.label }}</td>
          <td scope="row">{{ mission.description }}</td>
          <td scope="row">{{ mission.xpReward }}</td>
          <td scope="row">{{ mission.illustration }}</td>
          <td scope="row">{{ mission.createdAt ? mission.createdAt|date('Y-m-d') }}</td>
          <td scope="row">{{ mission.updatedAt ? mission.updatedAt|date('Y-m-d') }}</td>
          <td class="text-center">
            <a href="{{ path('detail_admin_mission',{ 'id': mission.id } )}}" class="btn btn-outline-secondary me-2"><i
                class="bi bi-eye-fill"></i>
            </a>
            <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-pencil-square"></i></i>
            </a>
            <button type="button" data-bs-toggle="modal" data-bs-target="#deleteBackdrop{{mission.id}}"
              class="btn btn-outline-danger"><i class="bi bi-trash3"></i>
            </button>
            <!-- DELETE Modal -->
            <div class="modal fade" id="deleteBackdrop{{mission.id}}" data-bs-backdrop="static" data-bs-keyboard="false"
              tabindex="-1" aria-labelledby="deleteBackdropLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="deleteBackdropLabel">Deletion of
                      {{ mission.label }}</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    Souhaitez-vous vraiment supprimer {{ mission.label }} ?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a href="#" class="btn btn-outline-danger">Delete</a>
                  </div>
                </div>
              </div>
            </div>
          </td>
        </tr>


        {% endfor %}

      </tbody>

    </table>
  </div>
</div>

{% endblock %}