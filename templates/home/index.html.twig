{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}


{% block main %}

<div class="container">
    <section class="section-white">
        <h1 class="text-center">Learning languages has never been more simple!</h1>
        <p class="lead text-center">Join us and start your language adventure today!</p>
        <br>
        <div class="d-flex justify-content-center">
            <img class="home-img-top" src="{{ asset('images/img_standard/2.png') }}" alt="Interactive Content">
        </div>


        <br>
        <div class="carousel-container">
            <button id="prev" class="carousel-btn prev disabled"><i class="bi bi-chevron-left"></i></button>
            <div class="carousel">
                <div class="carousel-track">
                    {% for language in languages %}
                    {% include "_components/carousel.html.twig" with {'language': language} %}
                    {% endfor %}
                </div>
            </div>
            <button id="next" class="carousel-btn next"><i class="bi bi-chevron-right"></i></button>
        </div>

    </section>
</div>


<section class="section-green py-5">
    <div class="container">
        <h2 class="mb-5 text-center title-green">Why choose LingoStep?</h2>

        <!-- Card 1: Image left -->
        <div class="row align-items-center mb-5 row-card-home">
            <div class="col-md-5">
                <img src="{{ asset('images/img_standard/1.png') }}" alt="Personalized Learning"
                    class="img-fluid rounded shadow-sm">
            </div>
            <div class="col-md-7">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title title-green">Personalized Learning</h5>
                        <p class="card-text">
                            At LingoStep, we tailor every course to your individual goals and pace.
                            Whether you're a beginner or an advanced learner, our system adapts to you,
                            ensuring efficient progress and lasting results. Track your achievements and
                            celebrate milestones along the way.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2: Image right -->
        <div class="row align-items-center mb-5 flex-md-row-reverse row-card-home">
            <div class="col-md-5">
                <img src="{{ asset('images/img_standard/4.png') }}" alt="Interactive Content"
                    class="img-fluid rounded shadow-sm">
            </div>
            <div class="col-md-7">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title title-green">Interactive Content</h5>
                        <p class="card-text">
                            Dive into immersive lessons, quizzes, and real-world scenarios. Our interactive
                            content keeps you engaged and motivated. Learn by doing, test your skills,
                            and reinforce your knowledge with exercises designed to make learning fun and effective.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3: Image left -->
        <div class="row align-items-center mb-5 row-card-home">
            <div class="col-md-5">
                <img src="{{ asset('images/img_standard/3.png') }}" alt="Community Support"
                    class="img-fluid rounded shadow-sm">
            </div>
            <div class="col-md-7">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title title-green">Community Support</h5>
                        <p class="card-text">
                            Join a vibrant community of learners and native speakers. Share tips, practice
                            conversations, and get support from fellow learners and mentors. Our community
                            makes language learning social, motivating, and fun.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center">
            {% if app.user %}
            <a href="{{ path('language_courses_list') }}" class="btn-lingo btn-lingo--white">Start
                Learning
            </a>
            {% else %}
            <a href="{{ path('register') }}" class="btn-lingo btn-lingo--white">
                Start
                Learning
            </a>
            {% endif %}
        </div>
    </div>
</section>

<div class="container">
    <section class="section-white">
        <h2 class="mb-4 text-center">Get Started Today!</h2>
        <p class="text-center">Sign up now and take the first step towards mastering a new language with
            LingoStep.</p>
        <div class="text-center">
            <a href="{{ path('register') }}" class="btn-lingo btn-lingo--green">Sign Up</a>
            <a href="{{ path('language_courses_list') }}" class="btn-lingo btn-lingo--green">Explore Courses</a>
        </div>
    </section>
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
{{ vite_entry_script_tags('carrousel') }}
{% endblock %}